<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:src="@drawable/salah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="Step BY Step Salah"
        android:textColor="#2C2C2C"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/main_logo"
        app:layout_constraintRight_toRightOf="@id/main_logo"
        app:layout_constraintTop_toBottomOf="@+id/main_logo" />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/white"
        android:padding="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/main_text"
        app:layout_constraintLeft_toLeftOf="@+id/main_text"
        app:layout_constraintRight_toRightOf="@id/main_text"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_marginVertical="@dimen/_20sdp"/>

    <Spinner
        android:id="@+id/spinner_school_of_thoughts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/white"
        android:padding="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/spinner_gender"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_gender"
        app:layout_constraintRight_toRightOf="@id/spinner_gender"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_marginVertical="@dimen/_20sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/_10sdp"
        android:text="DONE"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_school_of_thoughts" />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Note: you can change this information anytime"
        android:textColor="#2C2C2C"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_done"
        app:layout_constraintRight_toRightOf="@id/btn_done"
        app:layout_constraintTop_toBottomOf="@+id/btn_done" />

</androidx.constraintlayout.widget.ConstraintLayout>